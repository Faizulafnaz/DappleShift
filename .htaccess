# -----------------------------------------
# 1) Enable URL rewriting
# -----------------------------------------
RewriteEngine On

# -----------------------------------------
# 2) Allow access to HTML pages WITHOUT typing .html
#    Example: /about â†’ /about.html
# -----------------------------------------
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# -----------------------------------------
# 3) Custom 404 page
#    Make sure this file exists: /404.html
# -----------------------------------------
ErrorDocument 404 /404.html
